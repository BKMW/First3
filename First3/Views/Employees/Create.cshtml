@model First3.Models.Employee

@{
    ViewBag.Title = "Create";
}


@Html.Partial("_SideBar")


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <br />
    <div class="row">
        <div class="col-1">
            <a href="../Employees/Index">
                <i class="fas fa-arrow-circle-left fa-3x"></i>
            </a>
        </div>
        <div class="col-11" style="margin: 15px auto;">


        </div>
    </div>
    <br />


    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <table class="table table-hover" style="background-color:darkcyan; font-size:24px; font-weight:600; width:50%;">


        <tr>
            <td>
                @Html.LabelFor(model => model.FirstName, htmlAttributes: new { @class = "control-label col-md-10" })
            </td>
            <td>
                @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
            </td>
        </tr>

        <tr>
            <td>
                @Html.LabelFor(model => model.LastName, htmlAttributes: new { @class = "control-label col-md-10" })
            </td>
            <td>
                @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
            </td>
        </tr>

        <tr>
            <td>
                @Html.LabelFor(model => model.Position, htmlAttributes: new { @class = "control-label col-md-10" })
            </td>
            <td>
                @Html.EditorFor(model => model.Position, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Position, "", new { @class = "text-danger" })
            </td>
        </tr>

        <tr>
            <td>
                @Html.LabelFor(model => model.DepartmentID, "DepartmentID", htmlAttributes: new { @class = "control-label col-md-2" })
            </td>
            <td>
                @Html.DropDownList("DepartmentID", null, htmlAttributes: new { @class = "form-control" })

                @*@Html.DropDownList("DepartmentID", (SelectList)ViewBag.PageSizeList)*@
                @Html.ValidationMessageFor(model => model.DepartmentID, "", new { @class = "text-danger" })
            </td>
        </tr>

    </table>




    <div class="form-group">
        <div class="col-md-12">
            <input type="submit" value="Create" class="btn btn-outline-warning" style="font-weight:900; " />
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
